@model IEnumerable<FinalProg3.Models.empleados>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center" style="margin: 3% 0 2% 0;">Empleados</h2>

<div style="display:flex; justify-content:space-between">
    @Html.ActionLink("Crear nuevo empleado", "Create")
    @Html.ActionLink("Cerrar sesion", "Login", "empleados")
</div>
@using (Html.BeginForm())
{
<div style="display:flex; flex-direction: row; justify-content:space-between; width:45%;">
    @*Buscar por nombre: @Html.TextBox("nombre")*@
    @Html.TextBox("nombre", "", new { id = "Usuario", @class = "form-control text-center", placeholder = "Buscar por nombre", @style = "margin-bottom: 2%;" })
    <input class="btn btn-default" type="submit" value="Buscar" style="height:40px;" />
</div>
}
<table class="table table-hover">
    <thead class="text-center" style="background:#808080">
        <tr style="color: #fff;">
            <th class="text-center" scope="col">
                Nombre
            </th>
            <th class="text-center" scope="col">
                Apellido
            </th>
            <th class="text-center" scope="col">
                Puesto
            </th>
            <th class="text-center" scope="col">
                Usuario
            </th>
            @*<th scope="col">
                    @Html.DisplayNameFor(model => model.clave)
                </th>*@
            <th class="text-center" scope="col"></th>
        </tr>
    </thead>

    <tbody class="text-center">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.apellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.puesto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.usuario)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.clave)
                    </td>*@
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                    @*@Html.ActionLink("Detalles", "Details", new { id=item.id }) |*@
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.id })
                </td>
            </tr>

        }
    </tbody>


</table>
