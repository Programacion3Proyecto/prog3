@model IEnumerable<FinalProg3.Models.citas>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center" style="margin: 3% 0 2% 0;">Ver Citas</h2>

<div style="display:flex; justify-content: space-between; padding:1%;">
    @Html.ActionLink("Crear nueva", "Create")
    @Html.ActionLink("Regresar a la lista pacientes", "Index", "pacientes")
    @Html.ActionLink("Ver facturas", "Index", "facturas")
</div>
<table class="table table-hover">
    <tr style="background: #808080; color: #fff;">
        <th>
            Fecha Cita
        </th>
        <th>
            Duración
        </th>
        <th>
            Realizada 
        </th>
        <th>
            Doctor
        </th>
        <th>
            Paciente
        </th>
        <th>
            Realizada por
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.fechaOtorgada)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.duracion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fechaRealizada)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombreMedico)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombrePaciente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombreAsistenteRealizada)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
            @Html.ActionLink("Facturar", "Create", "facturas") |
            @Html.ActionLink("Eliminar", "Delete", new { id = item.id })
        </td>
    </tr>
}

</table>
