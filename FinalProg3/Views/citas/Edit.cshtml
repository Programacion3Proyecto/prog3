        </div>

        <div class="form-group center-block">
            @*@Html.LabelFor(model => model.nombreMedico, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="center-block">
                @Html.EditorFor(model => model.nombreMedico, new { htmlAttributes = new { @class = "form-control center-block text-center", placeholder = "Doctor" } })
                @Html.ValidationMessageFor(model => model.nombreMedico, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group center-block">
            @*@Html.LabelFor(model => model.nombrePaciente, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="center-block">
                @Html.EditorFor(model => model.nombrePaciente, new { htmlAttributes = new { @class = "form-control center-block text-center", placeholder = "ID Paciente" } })
                @Html.ValidationMessageFor(model => model.nombrePaciente, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group center-block">
            @*@Html.LabelFor(model => model.nombreAsistenteRealizada, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="center-block">
                @Html.EditorFor(model => model.nombreAsistenteRealizada, new { htmlAttributes = new { @class = "form-control center-block text-center", placeholder = "Realizado Por" } })
                @Html.ValidationMessageFor(model => model.nombreAsistenteRealizada, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group center-block">
            <div class="center-block">
                <input type="submit" value="Guardar" class="btn btn-danger btn-lg btn-block center-block" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar a citas", "Index")
</div>
