@model FinalProg3.Models.citas

@{
    ViewBag.Title = "Edit";
}

<h2 class="text-center" style="margin: 3% 0 2% 0;">Editar Citas</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="form-group center-block">
            @*@Html.LabelFor(model => model.fechaOtorgada, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="center-block">
                @Html.EditorFor(model => model.fechaOtorgada, new { htmlAttributes = new { @class = "form-control center-block text-center", placeholder = "Fecha de la cita" } })
                @Html.ValidationMessageFor(model => model.fechaOtorgada, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group center-block">
            @*@Html.LabelFor(model => model.duracion, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="center-block">
                @Html.EditorFor(model => model.duracion, new { htmlAttributes = new { @class = "form-control center-block text-center", placeholder = "Duración de la cita (Minutos)" } })
                @Html.ValidationMessageFor(model => model.duracion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group center-block">
            @*@Html.LabelFor(model => model.fechaRealizada, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="center-block">
                @Html.EditorFor(model => model.fechaRealizada, new { htmlAttributes = new { @class = "form-control center-block text-center", placeholder = "Fecha creación cita" } })
                @Html.ValidationMessageFor(model => model.fechaRealizada, "", new { @class = "text-danger" })
