@model FinalProg3.Models.facturas
<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
@{
    ViewBag.Title = "Create";
}

<h2 class="text-center" style="margin: 3% 0 2% 0;">Crear Facturas</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group center-block">
            @*@Html.LabelFor(model => model.nombrePaciente, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="center-block">
                @Html.EditorFor(model => model.nombrePaciente, new { htmlAttributes = new { @class = "form-control center-block text-center", placeholder = "Nombre del paciente" } })
                @Html.ValidationMessageFor(model => model.nombrePaciente, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group center-block">
            @*@Html.LabelFor(model => model.nombreEmpleado, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="center-block">
                @Html.EditorFor(model => model.nombreEmpleado, new { htmlAttributes = new { @class = "form-control center-block text-center", placeholder = "Nombre de empleado" } })
                @Html.ValidationMessageFor(model => model.nombreEmpleado, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group center-block">
            @*@Html.LabelFor(model => model.fecha, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="center-block">
                @Html.TextBox("fecha", DateTime.Now.ToString("yyyy/MM/dd"), new { id = "fecha", @class = "form-control center-block text-center", placeholder="Fecha" })
                @Html.ValidationMessageFor(model => model.fecha, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group center-block">
            @*@Html.LabelFor(model => model.monto, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="center-block">
                @Html.EditorFor(model => model.monto, new { htmlAttributes = new { @class = "form-control center-block text-center", placeholder = "Monto" } })
                @Html.ValidationMessageFor(model => model.monto, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group center-block">
            <div class="center-block">
                <input type="submit" value="Crear" class="btn btn-danger btn-lg btn-block center-block" />
            </div>
        </div>
    </div>
}

<div style="display:flex; justify-content: space-between;">
    @Html.ActionLink("Regresar a facturas", "Index")
    @Html.ActionLink("Regresar a citas", "Index", "citas")
</div>
@section scripts{

    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script>
$(function () {
            $('#fecha').datepicker({
                dateFormat: "yy-mm-dd",
                showStatus: true,
                showWeeks: true,
                currentText: 'Now',
                autoSize: true,
                gotoCurrent: true,
                showAnim: 'blind',
                highlightWeek: true
            })
   
        })
    </script>
}