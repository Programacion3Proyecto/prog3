@model FinalProg3.Models.visitas
<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />


@{
    ViewBag.Title = "Create";
}

<h2 class="text-center" style="margin: 3% 0 2% 0;">Crear Visita</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group center-block">
            @*@Html.LabelFor(model => model.id, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="center-block">
                @Html.EditorFor(model => model.id, new { htmlAttributes = new { @class = "form-control center-block text-center", placeholder="ID" } })
                @Html.ValidationMessageFor(model => model.id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group center-block ">
            @*@Html.LabelFor(model => model.FechaRealizada, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="center-block">
                @Html.TextBox("FechaRealizada", DateTime.Now.ToString("yyyy/MM/dd"), new { id = "fecha", @class = "form-control center-block text-center" })
                @Html.ValidationMessageFor(model => model.FechaRealizada, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group center-block">
            @*@Html.LabelFor(model => model.Motivo, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="center-block">
                @Html.EditorFor(model => model.Motivo, new { htmlAttributes = new { @class = "form-control center-block text-center", placeholder = "Motivo de la visita" } })
                @Html.ValidationMessageFor(model => model.Motivo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group center-block">
            @*@Html.LabelFor(model => model.nombreMedico, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="center-block">
                @Html.EditorFor(model => model.nombreMedico, new { htmlAttributes = new { @class = "form-control center-block text-center", placeholder = "Doctor" } })
                @Html.ValidationMessageFor(model => model.nombreMedico, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group center-block">
           @* @Html.LabelFor(model => model.nombrePaciente, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="center-block">
                @Html.EditorFor(model => model.nombrePaciente, new { htmlAttributes = new { @class = "form-control center-block text-center", placeholder = "Id paciente" } })
                @Html.ValidationMessageFor(model => model.nombrePaciente, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group center-block">
            @*@Html.LabelFor(model => model.Comentario, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="center-block">
                @Html.EditorFor(model => model.Comentario, new { htmlAttributes = new { @class = "form-control center-block text-center", placeholder = "Comentario" } })
                @Html.ValidationMessageFor(model => model.Comentario, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group center-block">
            <label for="RecetaMedicamento" style="color:#808080" class="text-center center-block">Receta</label>
            @*@Html.LabelFor(model => model.RecetaMedicamento, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="center-block" style = "display:flex; justify-content:center;">
                @Html.TextAreaFor(model => model.RecetaMedicamento,10,40, new { htmlAttributes = new { @class = "form-control center-block text-center", @placeholder = "Receta" } })
                @Html.ValidationMessageFor(model => model.RecetaMedicamento, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group center-block">
            @*@Html.LabelFor(model => model.FechaProxVisita, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="center-block">
                @Html.EditorFor(model => model.FechaProxVisita, new { htmlAttributes = new { @class = "form-control center-block text-center", placeholder = "Próxima visita", id="fecha1" } })
                @Html.ValidationMessageFor(model => model.FechaProxVisita, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group center-block">
            <div class="center-block">
                <input type="submit" value="Crear" class="btn btn-danger btn-lg btn-block center-block " />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar a la lista de visitas", "Index")
</div>


@section scripts{

    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script>
$(function () {
            $('#fecha').datepicker({
                dateFormat: "yy-mm-dd",
                showStatus: true,
                showWeeks: true,
                currentText: 'Now',
                autoSize: true,
                gotoCurrent: true,
                showAnim: 'blind',
                highlightWeek: true
            })
       
        $('#fecha1').datepicker({
            dateFormat: "yy-mm-dd",
            showStatus: true,
            showWeeks: true,
            currentText: 'Now',
            autoSize: true,
            gotoCurrent: true,
            showAnim: 'blind',
            highlightWeek: true
        })
})

    </script>
}