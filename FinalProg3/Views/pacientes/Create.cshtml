@model FinalProg3.Models.pacientes
<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
@{
    ViewBag.Title = "Create";
}

<h2 class="text-center" style="margin: 3% 0 2% 0;">Crear pacientes</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group center-block">
            @*@Html.LabelFor(model => model.id, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="center-block">
                @Html.EditorFor(model => model.id, new { htmlAttributes = new { @class = "form-control center-block ", placeholder = "Cedula/ID" } })
                @Html.ValidationMessageFor(model => model.id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group center-block">
            @*@Html.LabelFor(model => model.nombre, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="center-block">
                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control center-block ", placeholder = "Nombres del paciente" } })
                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group center-block">
            @*@Html.LabelFor(model => model.apellido, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="center-block">
                @Html.EditorFor(model => model.apellido, new { htmlAttributes = new { @class = "form-control center-block ", placeholder = "Apellidos del paciente" } })
                @Html.ValidationMessageFor(model => model.apellido, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group center-block">
            @*@Html.LabelFor(model => model.telefono, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="center-block">
                @Html.EditorFor(model => model.telefono, new { htmlAttributes = new { @class = "form-control center-block ", placeholder = "Teléfono del paciente" } })
                @Html.ValidationMessageFor(model => model.telefono, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group center-block">
            @*@Html.LabelFor(model => model.fechaNac, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="center-block">
                @Html.EditorFor(model => model.fechaNac, new { htmlAttributes = new { @class = "form-control center-block ", placeholder = "Fecha de nacimiento", id="fecha" } })
                @Html.ValidationMessageFor(model => model.fechaNac, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group center-block">
            @*@Html.LabelFor(model => model.tipoSangre, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="center-block">
                @Html.EditorFor(model => model.tipoSangre, new { htmlAttributes = new { @class = "form-control center-block ", placeholder = "Tipo de sangre" } })
                @Html.ValidationMessageFor(model => model.tipoSangre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group center-block">
            <div class="center-block">
                <input type="submit" value="Crear" class="btn btn-danger btn-lg btn-block center-block" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar a la lista", "Index")
</div>

@section scripts{
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script>
        
$(function () {
            $('#fecha').datepicker({
                dateFormat: "yy-mm-dd",
                showStatus: true,
                showWeeks: true,
                currentText: 'Now',
                autoSize: true,
                gotoCurrent: true,
                showAnim: 'blind',
                highlightWeek: true
            })
    })
    </script>
    }
   